<div class="span12">
  <br>
  <br>
  <h1>Album</h1>
  <br>

    <div class="links">
     <% if can? :manage, @album.user %>
        <%= link_to 'Add Photo', new_user_album_photo_path(@album.user, @album), class:"btn btn-success btn-mini"%>
        <%= link_to 'Edit Album', edit_user_album_path(@album.user, @album), class:"btn btn-warning btn-mini" %>
        <%= link_to 'Destroy', user_album_path(@album.user, @album), class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= link_to 'Back to User Profile', user_path(@album.user), class:"btn btn-inverse btn-mini" %>
    </div>

    <br>

    <p>
      <b>Name:</b>
      <%= @album.name %>
    </p>

    <p>
      <b>Description:</b>
      <%= @album.description %>
    </p>

    <p>
      <b>Photos:</b>
    </p>

      <div class="row">
        <% @photos.each do |photo|%>
          <div class="span3 imglist">

            <% cycle("1","2","3","4","5") %>
              <div class="photo">
                <%= link_to( image_tag(photo.photo_picture.thumb.url), user_album_photo_path(photo.album.user, photo.album, photo)) %>
              </div>
            </div>
            <% if current_cycle == '2' %>
                <script>
                $( "div" ).last().addClass( "tilted1" );
                </script>
            <% end %>
            <% if current_cycle == '4' %>
                <script>
                $( "div" ).last().addClass( "tilted2" );
                </script>
            <% end %>
            <% if current_cycle == '5' %>
                <script>
                $( "div" ).last().addClass( "tilted3" );
                </script>
            <% end %>
          <% end %>
                </div>

    <div class="links">
     <% if can? :manage, @album.user %>
        <%= link_to 'Add Photo', new_user_album_photo_path(@album.user, @album), class:"btn btn-success btn-mini"%>
        <%= link_to 'Edit Album', edit_user_album_path(@album.user, @album), class:"btn btn-warning btn-mini" %>
        <%= link_to 'Destroy', user_album_path(@album.user, @album), class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>

      <%= link_to 'Back to User Profile', user_path(@album.user), class:"btn btn-inverse btn-mini" %>
    </div>


    <br>
    <br>

    <%= paginate @photos %>

</div>
