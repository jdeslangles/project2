<div class="span8">
  <h1>Listing albums</h1>

  <table class="table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Privacy</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @albums.each do |album| %>
    <tr>
      <td><%= album.name %></td>
      <td><%= album.description %></td>
      <td><%= album.privacy %></td>
      <td><%= link_to 'View', user_album_path(album.user, album), class:"btn btn-info btn-mini" %></td>
      <td><%= link_to 'Edit', edit_user_album_path(album.user, album), class:"btn btn-warning btn-mini" %></td>
      <td><%= link_to 'Destroy', [album.user,album], class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <div class="links">
    <%= link_to 'New Album', new_user_album_path, class:"btn btn-success btn-large" %>
  </div>
</div>