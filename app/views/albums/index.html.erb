<h1>Listing albums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Privacy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.name %></td>
    <td><%= album.description %></td>
    <td><%= album.privacy %></td>
    <td><%= link_to 'Show', user_album_path(album.user, album) %></td>
    <td><%= link_to 'Edit', edit_user_album_path(album.user, album) %></td>
    <td><%= link_to 'Destroy', [album.user,album], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

