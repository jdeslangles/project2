<%= form_for [@album.user, @album, @photo] do |f| %>

  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="links">
    <%= f.submit 'Submit', class: "btn btn-success btn-mini" %>
    <%= link_to 'Back to Album', user_album_path(@album.user, @album), class:"btn btn-inverse btn-mini" %>
  </div>
  <br>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br />
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, size: '100x3' %><br />
  </div>

  <div class="field">
    <%= f.file_field :photo_picture, :onchange =>"validateFiles(this);", :data => { :max_file_size => 1.megabyte } %>
     <%= f.label :photo_picture%><br />
  </div>

  <div class="field">
    <%= f.label :tag_list %> <i>Please separate tags with a comma.</i><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="links">
    <%= f.submit 'Submit', class: "btn btn-success btn-mini" %>
    <%= link_to 'Back to Album', user_album_path(@album.user, @album), class:"btn btn-inverse btn-mini" %>
  </div>
<% end %>