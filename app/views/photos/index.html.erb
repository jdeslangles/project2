<h1>Index Photos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Photo picture</th>
    <th>Album</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @photos.each do |photo| %>
  <tr>
    <td><%= photo.name %></td>
    <td><%= photo.description %></td>
    <td><%= image_tag photo.photo_picture.url %></td>
    <td><%= photo.album %></td>
    <td><%= link_to 'Show', album_photo %></td>
    <td><%= link_to 'Edit', edit_album_photo_path(photo) %></td>
    <td><%= link_to 'Destroy', album_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

