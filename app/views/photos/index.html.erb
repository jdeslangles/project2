<div class="span8">
  <h1>Index Photos</h1>
  <br>
  <br>
    <div class="links">
    <%= link_to 'Add Photo', new_user_album_photo_path, class:"btn btn-success btn-large" %>
    </div>
  <br>
  <table class="table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo picture</th>
      <th>Album</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @photos.each do |photo| %>
    <tr>
      <td><%= photo.name %></td>
      <td><%= photo.description %></td>
      <td><%= image_tag photo.photo_picture.url %></td>
      <td><%= photo.album_id %></td>
      <td><%= link_to 'View', user_album_photo_path(photo.album.user, photo.album, photo), class:"btn btn-info btn-mini" %></td>
      <td><%= link_to 'Edit', edit_user_album_photo_path(photo.album.user, photo.album, photo), class:"btn btn-warning btn-mini" %></td>
      <td><%= link_to 'Destroy', [photo.album.user,photo.album,photo], class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <div class="links">
    <%= link_to 'Add Photo', new_user_album_photo_path, class:"btn btn-success btn-large" %>
  </div>
<br>
<br>
</div>