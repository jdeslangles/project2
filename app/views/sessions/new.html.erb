<div class="span8">
	<h1 class="inner_shadow">Login</h1>
	<br>
	<br>
	<%=form_tag sessions_path do%>
		<div class="field">
			<%= label_tag :username %>
			<%= text_field_tag :username, params[:username] %>
		</div>
		<div class="field">
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>
		<div class="actions">
			<%= submit_tag "Login" %>
		</div>
	<%end%>
<br>
<br>
</div>
<br>
<br>