<div class="span8">
  <h1>Listing comments</h1>

  <table class="table">
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Album</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.user %></td>
      <td><%= comment.album %></td>
      <td><%= link_to 'View', comment, class:"btn btn-info btn-mini" %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment), class:"btn btn-warning btn-mini" %></td>
      <td><%= link_to 'Destroy', comment, class:"btn btn-danger btn-mini", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <div class="links">
    <%= link_to 'New Comment', new_comment_path, class:"btn btn-success btn-large" %>
  </div>
</div>