<br>
<div class="span6 offset3 photo">
<h2>Sign up</h2>
<br>
<p>Sign in with <%= link_to "Google", user_omniauth_authorize_path(:google_oauth2) %> or sign up with this regsitration form:</p>
<br>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %>
    <%= f.email_field :email, :autofocus => true %>
  </div>

  <div>
    <%= f.label :first_name, 'First Name' %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, 'Last Name' %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div>
    <%= f.label :biography %>
    <%= f.text_area :biography, size: '100x3' %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation %>
  </div>
<br>
  <div><%= f.submit "Sign up", class:"btn btn-inverse btn-normal"  %>
  </div>
<% end %>
</div>
