<div class="span4 offset4 photo">
<br>
<br>
  <h2 class="inner_shadow">Member Login</h2>

  <br>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? %>
    <div><%= f.check_box :remember_me %><%= f.label :remember_me, "Remember Me" %></div>
  <% end -%>
<br>
  <div><%= f.submit "Sign in", class:"btn btn-inverse btn-large" %></div>
<% end %>

<%= render "devise/shared/links" %>
<br>
</div>